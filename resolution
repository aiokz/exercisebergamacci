#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(){
    int T1 = 1, T2 = 1, T3 = 1, T4, i = 3, n;
    
    printf ("Quantos termos quer mostrar? ");
    scanf("%d", &n);
    printf("%d", T3);
    
    for(i = 1; i < n; i++){
        T4 = T3 + T2 + T1;
        T1 = T2;
        T2 = T3;
        T3 = T4;
        
        printf (" - %d", T1);
    }
	return 0;
  }
